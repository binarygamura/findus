<h2>Liste aller Personen</h2>
<div class="box">
    <table id='person_table' class="pure-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Strasse</th>
                <th>Ort</th>
                <th style="visibility:collapse;" hidden="true">Organisation</th>
                <th style="visibility:collapse;" hidden="true">Postleitzahl</th>
                <th style="visibility:collapse;" hidden="true">Telefonnummer</th>
                <th>Aktionen</th>
            </tr>
        </thead>
        <tbody>
            {foreach item=person from=$all_persons}
            <tr>
                <td>{$person.id}</td>
                <td>{$person.name}</td>
                <td>{$person.street}</td>
                <td>{$person.city}</td>
                <td style="visibility:collapse;" hidden="true">{$person.organization}</td>
                <td style="visibility:collapse;" hidden="true">{$person.postalcode}</td>
                <td style="visibility:collapse;" hidden="true">{$person.phone}</td>
                <td></td>
            </tr>
            {/foreach}
        </tbody>
    </table>
    <a href='' id='add_person_button'>hinzuf√ºgen</a>
</div>

